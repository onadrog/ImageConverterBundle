<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autoconfigure="true"/>
        <service id="image_converter.type" class="Onadrog\ImageConverterBundle\Type\ImageConverterType">
            <tag name="form.twig"/>
            <argument >%image_converter%</argument>
            <argument type="service" id="image_converter.subscriber"/>
        </service>
    </services>
</container>